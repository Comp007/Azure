@page "/counter"

<h1>Gebeya Counter ++</h1>

<p>Current count: @currentCount</p>
<p>Carré count: @somCurrentCount</p>

<button class="btn btn-primary" onclick="@IncrementCount">Click here</button>

@functions {
    int currentCount = 0;
    int somCurrentCount = 100;


    void IncrementCount()
    {
        if (currentCount == 100)
        {
            currentCount = 0;
        }
        else
        {
            currentCount = currentCount + 10;
            somCurrentCount = currentCount * 2;

        }

    }
}